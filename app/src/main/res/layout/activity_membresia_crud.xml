<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFEFEB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título del formulario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRUD Membresia"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa los datos donde corresponden"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#0F6A62"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ "
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#012C28"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar ID:"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#012C28"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/editTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID de Membresia"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ "
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#012C28"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/editTextNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero"
            android:textColor="@color/black"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <EditText
            android:id="@+id/editTextTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo"
            android:textColor="@color/black"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <EditText
            android:id="@+id/editTextPremia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Premia"
            android:inputType="numberDecimal"
            android:layout_marginBottom="50dp"
            android:textColor="@color/black"
            android:minHeight="48dp"
            android:padding="12dp" />


        <Button
            android:id="@+id/btnAddMembresia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir Membresia"
            android:backgroundTint="#009688"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <Button
            android:id="@+id/btnUpdateMembresia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar Membresia"
            android:backgroundTint="#009688"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnDeleteMembresia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Membresia"
            android:backgroundTint="#009688"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <Button
            android:id="@+id/btnGetAllMembresias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Todos las Membresias"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#009688"
            android:minHeight="48dp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>


