<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DA9F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título del formulario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRUD Producto"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa los datos donde corresponden"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#11217C"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ "
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#08103C"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar ID:"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#0E1959"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/editTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID de Producto"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ ─── ⋆⋅☆⋅⋆ "
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#08103C"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/editTextClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clave"
            android:textColor="@color/black"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textColor="@color/black"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <EditText
            android:id="@+id/editTextPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <EditText
            android:id="@+id/editTextCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif-black"
            android:text="."
            android:textColor="#9CA8F0"
            android:textSize="5sp" />


        <Button
            android:id="@+id/btnAddProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir Producto"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#172B9C"
            android:minHeight="48dp"
            android:padding="12dp" />
        <Button
            android:id="@+id/btnUpdateProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar Producto"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#172B9C"
            android:minHeight="48dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnDeleteProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Producto"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#172B9C"
            android:minHeight="48dp"
            android:padding="12dp" />
        <Button
            android:id="@+id/btnGetAllProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Todos los Productos"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#172B9C"
            android:minHeight="48dp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>


