<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios para el acceso a Internet y el estado de la red -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoDeRiojas"
        tools:targetApi="31">


        <activity
            android:name=".MembresiaCRUD"
            android:exported="true" />
        <activity
            android:name=".MostrarMembresia"
            android:exported="true" />
        <activity
            android:name=".ProductoCRUD"
            android:exported="true" />
        <activity
            android:name=".MostrarProducto"
            android:exported="true" />
        <activity
            android:name=".SocioCRUD"
            android:exported="true" />
        <activity
            android:name=".MostrarSocio"
            android:exported="true" />
        <activity
            android:name=".MenuActivity"
            android:exported="true" /> <!-- Asegúrate de que esta actividad está exportada -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
